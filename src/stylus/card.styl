.box
  display flex
  flex-direction column
  align-items center
  justify-content center
  background-color #fff
  border 1px solid rgba(#c0c0c0, .4)
  border-radius 8px
  margin 1rem
  min-height: 500px
  transition .3s linear
  &:hover
    transition .3s linear
    box-shadow 0px 0px 15px 1px #333
    transform scale(1.05)
    cursor: pointer
  img
    max-width 200px
    max-height 200px
    margin 2rem 0
  h3
    font-size 2rem
    line-height 2rem
    text-align center
    font-weight bold
  p
    width 80%
    text-align center
    margin 1rem auto
    font-weight bold
  .border
    width 20%
    margin 0 auto
  .price
    text-align center
    color red
    margin 1rem 0
    font-weight bold
  .buyButton
    background-color red
    border-radius 7px
    padding 0.3rem 1rem
    color #fff
    display block
    margin 0 auto
    &:focus
      outline none
  .quantity
    color #c0c0c0
    margin 1rem auto
    text-align center

.border
  height 1px
  width 100%
  background-color #333
  opacity .3